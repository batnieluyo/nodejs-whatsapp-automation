
  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0 text-dark">Edit user</h1>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item ">User</li>
              <li class="breadcrumb-item active">Tambah</li>
              
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>

      <section class="content">
        <div class="container-fluid">
           <div class="row">
          <!-- Left col -->
          <div class="col-md-6">
            <!-- MAP & BOX PANE -->
            <!-- TABLE: LATEST ORDERS -->
             <div class="card card-info">
              <div class="card-header">
                <h3 class="card-title">Add</h3>
              </div>
              <div class="card-body">
                <!-- Date dd/mm/yyyy -->
                <form action="../update" method="post">
                <input name="id_user" type="hidden" value="{{results.id}}">
                
                <div class="form-group">
                  <label>Username</label>
                  <div class="input-group">
                    <div class="input-group-prepend">
                      <span class="input-group-text"><i class="far"></i></span>
                    </div>
                    <input name="username" type="text" class="form-control" value="{{{results.username}}}" placeholder="example : example002" >
                  </div>
                  <!-- /.input group -->
                </div>
                    <div class="form-group">
                  <label>Email</label>
                  <div class="input-group">
                    <div class="input-group-prepend">
                      <span class="input-group-text"><i class="far"></i></span>
                    </div>
                    <input name="emaile" type="text" class="form-control" value="{{{results.email}}}" placeholder="example : example@gmail.com" >
                  </div>
                  <!-- /.input group -->
                </div>
                <!-- /.form group -->
                <!-- /.form group -->
                <div class="form-group">
                  <label>Password</label>
                  <div class="input-group">
                    <div class="input-group-prepend">
                      <span class="input-group-text"><i class="far"></i></span>
                    </div>
                    <input name="password" value="{{{results.password}}}" type="text" class="form-control" placeholder="******" >
                  </div>
                  <!-- /.input group -->
                </div>
                <!-- /.form group -->


                <!-- phone mask -->
                <div class="form-group">
                  <label>Level User:</label>

                  <div class="input-group">
                    <div class="input-group-prepend">
                      <span class="input-group-text"><i class="fas "></i></span>
                    </div>
                    <select id="pilih-level" name="level" id="" class="form-control" required>
                      <option value="">Pilih Level</option>
                      <option value="1">Super Admin</option>
                      <option value="2">Admin Cabang</option>
                    </select>
                    {{!-- <input name="harga_produk" type="text" class="form-control" > --}}
                  </div>
                  <!-- /.input group -->
                </div>
                <!-- /.form group -->
                
                <!-- phone mask -->
                <div class="form-group" id="pilih-kantor" {{#if is_admin}}style="display:none"{{else}}style="display:block"{{/if}}>
                  <label>Kantor Cabang :</label>

                  <div class="input-group">
                    <div class="input-group-prepend">
                      <span class="input-group-text"><i class="fas "></i></span>
                    </div>
                    <select name="kantor" class="form-control" id="">
                      <option value="">Pilih kantor </option>
                      {{#each kantors}}
                      <option value="{{{id_kantor}}}">{{{kantor_name}}}</option>
                      {{/each}}
                    </select>
                    {{!-- <input name="harga_produk" type="text" class="form-control" > --}}
                  </div>
                  <!-- /.input group -->
                </div>
                <!-- /.form group -->
            <button type="submit" class="form-control btn btn-info">Simpan</button>
 
              </div>
              </form>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
          </div>
        </div>
      </section>