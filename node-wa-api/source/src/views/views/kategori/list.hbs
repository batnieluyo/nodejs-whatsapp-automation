      <section class="content">
        <div class="container-fluid">
           <div class="row">
          <!-- Left col -->
          <div class="col-md-12">
            <!-- MAP & BOX PANE -->
            <!-- TABLE: LATEST ORDERS -->
            <div class="card">
              <div class="card-header border-transparent">
                <h3 class="card-title">kategori Data</h3>

                <div class="card-tools">
                  <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                  </button>
                  <button type="button" class="btn btn-tool" data-card-widget="remove">
                    <i class="fas fa-times"></i>
                  </button>
                </div>
              </div>
              
              <!-- /.card-header -->
              <div class="card-body p-0">
             <div class="col-md-8">
                 <a href="/kategori/add" class="btn btn-info btn-sm">Tambah</a>
              </div>
                <div class="table-responsive">
                  <table class="table m-0">
                    <thead>
                    <tr>
                      <th>No</th>
                      <th>Name kategori</th>
                     
                      <th>Action</th>
                    </tr>
                    </thead>
                   <tbody>
                     {{#each results}}
                      <tr>
                        <td>{{{ @index }}}</td>
                        <td>{{{ kategori_name }}}</td>
                       
                        <td>
                          <a href="kategori/edit/{{{id}}}" class="btn btn-sm btn-info" >Edit</a>
                          <a href="kategori/hapus/{{{id}}}" class="btn btn-sm btn-danger" data-id="{{{ kategori_id }}}">Delete</a>
                        </td>
                      </tr>
                      {{/each}}
                   </tbody>
                  </table>
                </div>
                <!-- /.table-responsive -->
              </div>
