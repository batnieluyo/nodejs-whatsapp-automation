<script>
    $(document).ready(function(){
      var url = window.location.href;
      if(url.includes("/device/connect")){
      
          authwa()
            // set interval
          var tid = setInterval(mycode, 1000);
          var user  = $(".status-login").attr("svn"); 
          var values = {
            'user' : user,
            'id'  : window.location.href.substr(window.location.href.lastIndexOf('/') + 1)
          } 
      }else if(url.includes("/user/add")){
        $("#pilih-level").change(function(){
        
          if(this.value == 2){
            $("#pilih-kantor").show();
          }else{
            $("#pilih-kantor").hide();
          }
        })
      }else if(url.includes("/user/edit")){
        $("#pilih-level").change(function(){
        
          if(this.value == 2){
            $("#pilih-kantor").show();
          }else{
            $("#pilih-kantor").hide();
          }
        })
      }else if(url.includes("/chat/add")){
          $('.select2').select2({
            tags: true
          })
      }
      function authwa(){
         var values = {
            'id'  : window.location.href.substr(window.location.href.lastIndexOf('/') + 1)
          } 
         $.ajax({
            url: "/waapi/connect",
            type: "post",
            data: values ,
            success: function (response) {
              // You will get response from your PHP page (what you echo or print)
              console.log(response)
            },
            error: function(jqXHR, textStatus, errorThrown) {
              console.log(textStatus, errorThrown);
            }
        });
      }
      function mycode() {
          $.ajax({
            url: "/device/status",
            type: "post",
            data: values ,
            success: function (response) {
              // You will get response from your PHP page (what you echo or print)
              if(response === 'connected'){
                abortTimer();
                window.location = 'http://localhost:8000/device/';
              }
            $( ".status-login" ).replaceWith( response.barcode );
            },
            error: function(jqXHR, textStatus, errorThrown) {
              console.log(textStatus, errorThrown);
            }
        });
        console.log('{ action : timer loop }')
      }
      function abortTimer() { // to be called when you want to stop the timer
        clearInterval(tid);
      }
    });
    
</script>
